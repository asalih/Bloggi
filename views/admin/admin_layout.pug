    link(rel='stylesheet', type='text/css', href='/admin/main.css')
    script(src="/admin/admin.js" type="text/javascript")
  body
    .masthead
        h1.masthead-title
            a(href="/") Manage
        hr.masthead-hr
        div.input-group.input-group-sm
            span.input-group-addon
                i.fa.fa-folder-open-o
            input#currentPath.form-control(type='text', aria-label='Text input with checkbox' value="/")
        br
        div.tree-container
            

    .listing
      block content
      hr
      footer
        p &copy; #{year} - My Nodejs/Pug Application



    block scripts
