doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{title} - My Blog/Admin
    
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet"  href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous")
    script( src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=", crossorigin='anonymous')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous")
    script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous")
    
    script(src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.3.3/ace.js" type="text/javascript")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.4.0/min/dropzone.min.js")
    link(rel='stylesheet', type='text/css', href='https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.4.0/min/dropzone.min.css')
    link(rel='stylesheet', type='text/css', href='/admin/main.css')
    script(src="/admin/admin.js" type="text/javascript")
  body
    .masthead
        h1.masthead-title
            a(href="/") Manage
        hr.masthead-hr
        div.navIt
            a#settings.btn.btn-link(href="javascript:void(0);" style="padding-left:0px;margin-bottom:5px;")
                i.fa.fa-cog
                |  Settings
            i.fa.fa-angle-right.ri
        div.navIt
            a#editRouting.btn.btn-link(href="javascript:void(0);" style="padding-left:0px;margin-bottom:5px;")
                i.fa.fa-link
                |  Edit Routing Table
            i.fa.fa-angle-right.ri
        div
            form#dropzone.dropzone(action="/admin/fileUpload" method="post" enctype="multipart/form-data")
                div.input-group.input-group-sm
                    div.input-group-prepend
                        i.input-group-text.fa.fa-folder-open-o
                    input#currentPath.form-control(type='text', aria-label='Text input with checkbox' value="/")
                    .input-group-append
                      button.btn.btn-secondary.fa.fa-plus(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                      .dropdown-menu.dropdown-menu-right
                        a.dropdown-item(href='javascript:void(0)')
                            input#fileAdding(type="text")
                        div(style="text-align:right;padding-right:1.6em")
                            button#btnAddFolder.btn.btn-sm.btn-active(style="margin-right:0.3em") add folder
                            button#btnAddFile.btn.btn-sm.btn-active add file
                        div#addMsg(style="font-size:0.65em;margin-left:2.3em;padding-top:0.4em")


        div.tree-container
            

    .listing
      block content
      hr
      footer
        p &copy; #{year} - Bloggi App



    block scripts
