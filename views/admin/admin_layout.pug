doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{title} - My Blog/Admin
    
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
    link(rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous")
    script(src='https://code.jquery.com/jquery-3.2.1.min.js', integrity='sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4=', crossorigin='anonymous')
    script(src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous")
    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/ace/1.2.6/ace.js" type="text/javascript")
    link(rel='stylesheet', type='text/css', href='/admin/main.css')
    script(src="/admin/admin.js" type="text/javascript")
  body
    .masthead
        h1.masthead-title
            a(href="/") Manage
        hr.masthead-hr
        div
            a#editRouting.btn.btn-link.btn-lg(href="javascript:void(0);" style="padding-left:0px;margin-bottom:5px;")
                i.fa.fa-link
                |  Edit Routing Table
                i.fa.fa-angle-right(style="margin-left:4.2rem")
        div.input-group.input-group-sm
            span.input-group-addon
                i.fa.fa-folder-open-o
            input#currentPath.form-control(type='text', aria-label='Text input with checkbox' value="/")
            .input-group-btn
              button.btn.btn-secondary.fa.fa-plus(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
              .dropdown-menu.dropdown-menu-right
                a.dropdown-item(href='javascript:void(0)')
                    input#fileAdding(type="text")
                div(style="text-align:right;padding-right:1.6em")
                    button#btnAddFolder.btn.btn-sm.btn-active(style="margin-right:0.3em") add folder
                    button#btnAddFile.btn.btn-sm.btn-active add file
                div#addMsg(style="font-size:0.65em;margin-left:2.3em;padding-top:0.4em")


        div.tree-container
            

    .listing
      block content
      hr
      footer
        p &copy; #{year} - Bloggi App



    block scripts
