        ul.masthead-nav
            li.nav-item
                a.nav-link(href='/') Home
            li.nav-item
                a.nav-link(href='/about/') About
            li.nav-item
                a.nav-link(href='/contact/') Contact
        hr.masthead-hr
        ul.masthead-nav
            li.nav-item
                a.nav-link(href="https://github.com/asalih" target="_blank") Github
            li.nav-item
                a.nav-link(href="https://twitter.com/ahmets_11" target="_blank") Twitter
